@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TargetLocked</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>    <!-- DevExtreme themes -->
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/19.2.6/css/dx.common.css">
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/19.2.6/css/dx.light.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- DevExtreme library -->
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/19.2.6/js/dx.all.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GenSearch</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        <div class="text-center mb-5">
            <h1 class="display-4">Welcome to GenSearch!</h1>
        </div>
        <div class="d-flex">
            <div id="filterSidebar">
                <div class="my-4">
                    <div class="d-flex">
                        <h4>Diseases</h4>
                        <i id="diseaseCollapse" class="dx-icon-chevronup ml-auto mt-2 collapseIcon"></i>
                    </div>
                    <div id="diseaseFilter"></div>
                </div>
                <div class="my-4">
                    <h4>Publication Date</h4>
                    <div class="d-flex">
                        <div id="dateDropdownButton"></div>
                        <div>
                            <div id="afterDate"></div>
                            <div id="beforeDate"></div>
                        </div>
                    </div>
                </div>
                <div class="my-4">
                    <div class="d-flex">
                        <h4>Species</h4>
                        <i id="speciesCollapse" class="dx-icon-chevronup ml-auto mt-2 collapseIcon"></i>
                    </div>
                    <div id="speciesFilter"></div>
                </div>
                <div class="my-4">
                    <div class="d-flex">
                        <h4>Authors</h4>
                        <i id="authorsCollapse" class="dx-icon-chevronup ml-auto mt-2 collapseIcon"></i>
                    </div>
                    <div id="authorsFilter"></div>
                </div>
            </div>
            <div class="container">
                <div class="searchContainer">
                    <div class="d-flex w-100">
                        <div id="searchBox"></div>
                        <div id="searchIcon"></div>
                    </div>
                    <div id="responseList"></div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>